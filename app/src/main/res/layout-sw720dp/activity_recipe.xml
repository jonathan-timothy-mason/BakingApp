<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/fragment_recipe_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/fragment_ingredients_or_steps_container"
        app:layout_constraintHorizontal_weight="3"></FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_ingredients_or_steps_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fragment_recipe_container"
        app:layout_constraintHorizontal_weight="7"/>
</androidx.constraintlayout.widget.ConstraintLayout>